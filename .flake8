[flake8]
ignore =
  E203,
  E266,
  E501,
  W503,
  F403,
  F401,
  E231,
  D101,    # Missing docstring in public class -- my docstrings are in the __init__ which seems to fail this ?
max-line-length = 88
max-complexity = 20
inline-quotes = double
docstring-convention=numpy
rst-roles =
  class
  method
  func
  attr
exclude =
    devel/*
    setup.py
per-file-ignores =
    tests/*:D
